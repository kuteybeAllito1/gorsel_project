              ItemTapped="OnItemTapped"
              SelectionMode="None">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                
                                <Button Text="DÃ¼zenle" Clicked="OnEditItemClicked" FontSize="Medium"  BackgroundColor="Grey" TextColor="Black" />
                                <Button Text="Sil" Clicked="OnDeleteItemClicked" FontSize="Medium"  BackgroundColor="Grey" TextColor="Black" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>

    </ScrollView>
</ContentPage>