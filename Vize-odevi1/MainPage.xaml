<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Vize_odevi1.MainPage">

    <ScrollView>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2.6*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackLayout Grid.Row="0" Grid.Column="1"  Padding="10" Spacing="10" Orientation="Vertical" VerticalOptions="Center">
            <Image Source="benim.png" HeightRequest="180" WidthRequest="180"    />

            <Label Text="Kuteybe Allito" FontSize="Large" TextColor="White" HorizontalOptions="Center" />
        </StackLayout>

        <ScrollView Grid.Row="1" Grid.Column="1" >
            <StackLayout Padding="20" Spacing="15" Orientation="Vertical" VerticalOptions="Center">
                <Label  Text="Bartın Üniversitesi " FontSize="Large" HorizontalOptions="Center" />
                <Label  Text="bilgisayar Mühendisliği " FontSize="Large" HorizontalOptions="Center" />
                <Label Text="Ödev-1" FontSize="Large" TextColor="Aqua" Margin="0,10" HorizontalOptions="Center" />
            </StackLayout>
        </ScrollView>
    </Grid>
</ScrollView>

</ContentPage>
